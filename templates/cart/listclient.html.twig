{% extends 'front.html.twig' %}

{%  block body %}

    <section class="class-timetable-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="section-title">
                      <br><br>  <span>Voici votre Liste de commandes</span>

                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="class-timetable">
                        <table style='width:1300px'>
                            <thead>
                            <tr>

                                <th>Id</th>
                                <th>Date </th>
                                <th>num</th>
                                <th>Total</th>

                                <th>Delete</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
       <tr {% for p in commandes %}>
            <td style='color:#ffffff'>{{ p.id}}</td>
                                <td style='color:#ffffff'> {{ p.Date|date }}</td>
                                <td style='color:#ffffff'> {{ p.numero_commande}}</td>
                                <td style='color:#ffffff'>{{ p.total }} dt</td>

                                <td style='color:#ffffff'> <div><a href="{{ path('cart_deleteCommande',{'id':p.id}) }} "> Delete</a></div></td>

        </tr {% endfor %}>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}